    ...
def comprobar_el_rango(valor):
    if valor < 2 or valor > 12:
        return True
    else:
        return print("El valor no Ã©s entre 2 i 12. ")

def mostrar_respuesta():
    print("La probabilidad es", calcular_probabilidad)

calcular_tirada()
